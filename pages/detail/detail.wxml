<!--pages/detail/detail.wxml-->
<scroll-view class='scbg' scroll-y='true'>
<block wx:for="{{list}}" wx:for-item="itemName" wx:for-index="id">
  <view class='box' bindtap="showdetail">
    <view class='firstblock'>
      <image class='touxiang' src='{{itemName.face_url}}'></image>
      <view class='person'>
        <view class='name'>
          <text class='showname'>{{itemName.username}}</text>
        </view>
        <view class='tel'>
          <text class='showtime'>{{itemName.send_timestamp}}</text>
        </view>
      </view>
    </view>
    <view class='secondblock'>
      <text class='content'>{{itemName.centent}}</text>
    </view>
    <view class='thirdblock'>
      <image class='like' bindtap="like"  wx:if="{{!like}}" src='/images/like.png'></image>
      <image class='like' bindtap="like"  wx:elif="{{like}}" src='/images/likeplus.png'></image>
      <text class='num'>{{itemName.total_likes}}</text>
    </view>
  </view>
</block>
<view class="commitbox">
  <block wx:for="{{commit}}" wx:for-item="itemName" wx:for-index="id" >
  <view bindtap="showdetail">
    <view class="replyview">
      <text class="replytxt">{{itemName.reply}}</text>
    </view>
    <view class='firstblock'>
      <image class='touxiang' src='{{itemName.face_url}}'></image>
      <view class='person'>
        <view class='commitname'>
          <text class='commitnametxt'>{{itemName.username}}</text>
        </view>
        <view class='committel'>
          <text class='committime'>{{itemName.send_timestamp}}</text>
        </view>
      </view>
      <view class='thirdblock'>
        <image class='like' bindtap="commitlike"  wx:if="{{!itemName.like}}" src='/images/like.png'></image>
      <image class='like' bindtap="commitlike"  wx:elif="{{itemName.like}}" src='/images/likeplus.png'></image>
      <text class='num'>{{itemName.total_likes}}</text>
    </view>
    </view>
    <view class='commitcontentblock'>
      <text class='commitcontent'>{{itemName.content}}</text>
    </view>
    <view class='bottom'>
      <text bindtap="reply">回复</text>
    </view>
  </view>
</block>
</view>
</scroll-view>
<view class="reply" wx:if="{{reply}}">
      <textarea id="replycontent" show-confirm-bar="{{false}}" placeholder="回复..." placeholder-class="commitreply" class="commitreply" type="text" fixed="true"/>
      <button id="btn" class="submit" bindtap="reply">发送</button>
</view>
