@import "/pages/bottom_menu/bottom_menu";

page{
  background-color: #FBEDEC;
}

.scbg{
  background-color: #FBEDEC;
  width: 100%;
  height: 100%;
  left: 0rpx;
  right: 0rpx;
  top: 0rpx;
  position: absolute;
}

.box{
  background-color: white;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  border-bottom: 10rpx solid #EFEFEF;
  margin: 25rpx 50rpx;
  border-radius: 20rpx;
}

.firstblock{
  height: 150rpx;
  width: 92%;
  margin-left: 4%;
  margin-right: 4%;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
}

.touxiang{
  width: 130rpx;
  height: 130rpx;
}

.person{
  width: 75%;
  height: 130rpx;
  margin-left: 30rpx;
  margin-top: 5rpx;
}

.name{
  display: flex;
  justify-content: flex-start;
  margin-top: 10rpx;
  font-size: 40rpx;
  flex-direction: row;
}
.tag{
  width: 80rpx;
  height: 40rpx;
  margin-left: 20rpx;
  background-color: #E6E7EB;
  text-align: center;
  font-size: 22rpx;
  /* color: #797979; */
  border-radius: 30rpx;
  text-align: center;
  color: white;
  padding-top: 9rpx;
}


.tel{
  display: flex;
  justify-content: flex-start;
  margin-top: 35rpx;
  flex-direction: row;
}

.showname{
  font-size: 34rpx;
  color: #5FD9CD;
  font-family: PingFangSC-regular;
  font-weight: bold;
}

.showtime{
  font-size: 25rpx;
  color: #5E5D5D;
  font-family: PingFangSC-regular;
}

.secondblock{
  margin-top: 10rpx;
  margin-left: 4%;
  margin-right: 4%;
  padding-bottom: 20rpx;
}

.content{
  font-size: 30rpx;
  color: #101010;
  word-break: break-all;
}

.thirdblock{
  height: 50rpx;
  margin-top: 10rpx;
  margin-left: 4%;
  margin-right: 4%;
  display: flex;
  justify-content: flex-end;
}

.like{
  margin-top: 0rpx;
  margin-right: 10rpx;
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 20rpx;
}

.num_like{
  height: 40rpx;
  line-height: 40rpx;
  margin-top: 5rpx;
  width: 40rpx;
  font-size: 30rpx;
  color: #101010;
}

.comment{
  margin-top: 5rpx;
  margin-right: 10rpx;
  width: 40rpx;
  height: 40rpx;
}

.num_comment{
  height: 40rpx;
  line-height: 40rpx;
  margin-top: 5rpx;
  width: 40rpx;
  font-size: 30rpx;
  color: #101010;
}


/* notuse */
.commentbutton{
  font-size: 30rpx;
  margin-left: 0rpx;
}

