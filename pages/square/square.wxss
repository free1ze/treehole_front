/* pages/square/square.wxss */
@import "/pages/bottom_menu/bottom_menu";

page{
  background-color: #c0b6b6;
}

.scbg{
  background-color: #c0b6b6;
  width: 100%;
  height: 91%;
  left: 0rpx;
  right: 0rpx;
  top: 0rpx;
  position: absolute;
}

.box{
  background-color: white;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  border-bottom: 10rpx solid #EFEFEF;
  margin: 25rpx 50rpx;
  border-radius: 20rpx;
}

.firstblock{
  height: 100rpx;
  width: 92%;
  /* margin-left: 4%; */
  margin-right: 4%;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
}

.touxiang{
  width: 130rpx;
  height: 130rpx;
}

.person{
  width: 75%;
  height: 35rpx;
  margin-left: 27rpx;
  margin-top: 5rpx;
}

.name{
  display: flex;
  justify-content: flex-start;
  margin-top: 10rpx;
  font-size: 40rpx;
  flex-direction: row;
}


.tel{
  display: flex;
  justify-content: flex-start;
  margin-top: 8rpx;
  flex-direction: row;
}

.showname{
  font-size: 25rpx;
  color: #5FD9CD;
  font-family: PingFangSC-regular;
  font-weight: bold;
}

.showtime{
  font-size: 20rpx;
  color: #999696;
  font-family: PingFangSC-regular;
}

.secondblock{
  margin-top: 10rpx;
  margin-left: 4%;
  margin-right: 4%;
  /* padding-bottom: 20rpx; */
  /* border-bottom: 5rpx solid #BBBBBB; */
}

.content{
  font-size: 29rpx;
  color: #101010;
  word-break: break-all;
}

.thirdblock{
  height: 50rpx;
  margin-left: 4%;
  margin-right: 4%;
  display: flex;
  justify-content: flex-end;
}

.like{
  margin-top: 15rpx;
  margin-right: 10rpx;
  width: 30rpx;
  height: 30rpx;
}

.num_like{
  height: 50rpx;
  line-height: 50rpx;
  margin-top: 10rpx;
  width: 40rpx;
  font-size: 20rpx;
  color: #101010;
}

.comment{
  margin-top: 15rpx;
  margin-right: 10rpx;
  width: 30rpx;
  height: 30rpx;
}

.num_comment{
  height: 50rpx;
  line-height: 50rpx;
  margin-top: 10rpx;
  width: 40rpx;
  font-size: 20rpx;
  color: #101010;
}