  width: 50%;
  height: 700rpx;
}

.okbutton{
  width: 70%;
  background-color: #5FD9CD;
  height: 80rpx;
  position: fixed;
}

.searchbox{
  background-color: #FBEDEC;
  width: 100%;
  height: 150rpx;
  align-items: center;
  justify-content: center;
}

.totsearch{
  background-color:  #FFFFFF;
  display: flex;
  flex-direction: column;
  position: fixed;
  top: 0rpx;
  z-index: 1;
  width: 90%;
  margin-left: 5%;
  border-radius: 20rpx;
}

.weui-search-bar {
  background-color:  #FFFFFF;
  width: 100%;
  height: 9%;
  top: 0;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.weui-icon-search_in-box {
  position: absolute;
  left: 10px;
  top: 7px;
}
.weui-search-bar__form {
  position: relative;
  -webkit-box-flex: 1;
  -webkit-flex: auto;
          flex: auto;
  border-radius: 5px;
  background: #FFFFFF;
  border: 1rpx solid #E6E6EA;
}
.weui-search-bar__box {
  position: relative;
  padding-left: 30px;
  padding-right: 30px;
  width: 80%;
  box-sizing: border-box;
  z-index: 1;
}
.weui-search-bar__input {
  height: 28px;
  line-height: 28px;
  font-size: 14px;
}
.weui-search-bar__cancel-btn {
  width: 100rpx;
  line-height: 28px;
  color: #ffffff;
  background-color: #09BB07;
  white-space: nowrap;
  text-align: center;
}

.tagsbar{
  width: 96%;
  height: 60rpx;
  margin-left: 2%;
  margin-right: 2%;
  padding-top: 12rpx;
  display: flex;
  justify-content: flex-start;
}

.tag{
  width: 120rpx;
  height: 40rpx;
  margin-left: 20rpx;
  background-color: #b3b3cc;
  text-align: center;
  font-size: 22rpx;
  /* color: #797979; */
  border-radius: 30rpx;
  text-align: center;
  color: white;
  padding-top: 9rpx;
}

