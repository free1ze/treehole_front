<!--pages/square/square.wxml-->
<scroll-view class='scbg' scroll-y='true'>
<block wx:for="{{list}}" wx:for-item="itemName" wx:for-index="id">
  <view class='box' bindtap="showdetail">
    <view class='firstblock'>
      <!-- <image class='touxiang' src='{{itemName.face_url}}'></image> -->
      <view class='person'>
        <view class='name'>
          <text class='showname'># {{itemName.id}}</text>
        </view>
        <view class='tel'>
          <text class='showtime'>{{itemName.createdAt}}</text>
        </view>
      </view>
    </view>
    <view class='secondblock'>
      <text class='content'>{{itemName.content}}</text>
    </view>
    <view class='thirdblock'>
      <image class='like' src='/images/like.png' bindtap="like" data-id='{{itemName.id}}' data-openid='{{itemName.openid}}'></image>
      <text class='num' wx:if="{{itemName.likes != 0}}">{{itemName.likes}}</text>
    </view>
  </view>
</block>
</scroll-view>

<include src="/pages/bottom_menu/bottom_menu" />