/* pages/mine/mine.wxss */
@import "/pages/bottom_menu/bottom_menu";

page {
  background-color: #FBEDEC;
}

.personalInf {
  margin: 20rpx 50rpx;
  background-color: white;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  border-bottom: 10rpx solid #efefef;
  border-radius: 20rpx;
}

.scbg {
  background-color: #FBEDEC;
  widows: 100%;
  left: 0rpx;
  right: 0rpx;
  top: 0rpx;
  bottom: 9%;
  position: absolute;
}

.deco {
  width: 200rpx;
  height: 200rpx;
  margin-top: 50rpx;
  border-radius: 10rpx;
  border: 2px solid #efefef;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}

.ava {
  margin-top: 10rpx;
  width: 180rpx;
  height: 180rpx;
}

.nn {
  margin-top: 40rpx;
  font-size: 38rpx;
  color: black;
  padding-bottom: 40rpx;
}

.box {
  margin: 20rpx 50rpx;
  background-color: white;
  /* padding-top: 30rpx; */
  border-bottom: 10rpx solid #efefef;
  border-radius: 20rpx;
}

.firstblock {
  height: 150rpx;
  margin-left: 4%;
  margin-right: 4%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.touxiang {
  width: 130rpx;
  height: 130rpx;
}

.person {
  width: 75%;
  height: 130rpx;
  margin-left: 30rpx;
  margin-top: 10rpx;
}

.name {
  display: flex;
  justify-content: flex-start;
  margin-top: 10rpx;
  font-size: 40rpx;
  flex-direction: row;
}

.tel {
  display: flex;
  justify-content: flex-start;
  margin-top: 20rpx;
  flex-direction: row;
}

.showname {
  font-size: 34rpx;
  color: #3f51b5;
  font-family: PingFangSC-regular;
  font-weight: bold;
}

.showtime {
  font-size: 25rpx;
  color: #5e5d5d;
  font-family: PingFangSC-regular;
}

.secondblock {
  margin-top: 10rpx;
  margin-left: 4%;
  margin-right: 4%;
  padding-bottom: 20rpx;
  border-bottom: 5rpx solid #bbb;
}

.content {
  font-size: 29rpx;
  color: #101010;
}

.thirdblock {
  height: 100rpx;
  margin-left: 4%;
  margin-right: 4%;
  display: flex;
  justify-content: space-between;
}

.combination{
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.like {

  margin-left: 20rpx;
  width: 50rpx;
  height: 50rpx;
}

.num {
  height: 50rpx;
  margin-top: 10rpx;
  margin-left: 20rpx;
  line-height: 50rpx;
  font-size: 30rpx;
  color: #101010;
}

.del{
  margin-top: 25rpx;
  margin-right: 20rpx;
  width: 150rpx;
  height: 50rpx;
  border-radius: 10rpx;
  background-color: #E51C23;
  font-size: 30rpx;
  text-align: center;
  color: #FFFFFF;
  line-height: 50rpx;
}

.cu{
  margin-top: 25rpx;
  margin-left: 10%;
  width: 80%;
  height: 50rpx;
  border-radius: 10rpx;
  background-color: #5e5d5d;
  font-size: 30rpx;
  text-align: center;
  color: #FFFFFF;
  line-height: 50rpx;
  justify-content: center;
  align-items: center;
}

.setbar{
  width: 90%;
  height: 70rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  margin-right: 30rpx;
  text-align: left;
  align-items: center;
  justify-content: center;
  border-bottom: 3rpx solid #BBB;
  
}

.settxt{
  font-size: 35rpx;
  width: 50%;
  flex-direction: row;
  display: inline-block;
  height: 50rpx;
  overflow: hidden;
}

.arrow{
  width: 50rpx;
  height: 50rpx;
  margin-left: 30%;
  margin-top:15rpx;
  overflow: hidden;
}